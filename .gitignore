# Ignore all the bash stuff

.bash_history
.bash_logout
.bashrc
.profile
.ssh
.viminfo

# Files and data directories created by services
# that we shouldn't accidently commit

*.dat
*.log
*.lock
*.cookie
*.pid
*.env
bitcoin/*
lnd/*
tor/*
db/*
statuses/*
electrs/*
!statuses/update-status.json
events/signals

# Commit these empty directories

!lnd/.gitkeep
!tor/data/.gitkeep
!tor/run/.gitkeep
!db/.gitkeep
!electrs/.gitkeep
!events/signals/.gitkeep

# Python stuff
__pycache__
*.pyc

# Autogenerated for apps
apps/**/docker-compose.yml
apps/registry.json

nginx/nginx.conf
